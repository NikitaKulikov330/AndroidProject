<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Admin.AdminHome">

    <ImageView
        android:id="@+id/add_ctg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/add_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="385dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/boundsbtn"
        android:ems="10"
        android:hint="Add title"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/DarkGrey"
        android:textSize="18sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/add_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/boundsbtn"
        android:ems="10"
        android:hint="Add description"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/DarkGrey"
        android:textSize="18sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/add_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="521dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/boundsbtn"
        android:ems="10"
        android:hint="Add price"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/DarkGrey"
        android:textSize="18sp"
        android:textStyle="normal" />

    <android.widget.Button
        android:id="@+id/add_btn"
        android:layout_width="227dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="94dp"
        android:background="@drawable/signin_btn"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/descr"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="695dp"
        android:gravity="center"
        android:text=" sdssss"
        android:textSize="24sp"
        android:textStyle="italic|bold" />

</RelativeLayout>